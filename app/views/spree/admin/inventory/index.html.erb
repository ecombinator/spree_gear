<div class="row">
  <div class="col-md-2">
    <div class="dropdown">
      <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
        Filter: <%= params[:availability].capitalize %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "available", admin_inventory_index_path(availability: "available", category: params[:category]) %></li>
        <li><%= link_to "discontinued", admin_inventory_index_path(availability: "discontinued", category: params[:category]) %></li>
      </ul>
    </div>
  </div>
  <div class="col-md-2">
    <div class="dropdown">
      <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
        Category: <%= params[:category].nil? ? "all" : params[:category].capitalize %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <% Spree::Taxonomy.category_names.each do |category_name|%>
          <li><%= link_to category_name.capitalize, admin_inventory_index_path(availability: params[:availability], category: category_name) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="container-fluid">
  <table class="table table-striped">
    <thead>
    <tr>
      <th></th>
      <th>Variant</th>
      <th>SKU</th>
      <th>On Backorder</th>
      <th>Store Stock</th>
      <th>Committed</th>
      <th>Total</th>
    </tr>
    </thead>
    <tbody>
    <%= render partial: "row", collection: @variants, as: :variant %>
    </tbody>
  </table>
</div>
